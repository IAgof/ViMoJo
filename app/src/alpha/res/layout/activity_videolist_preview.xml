<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.videonasocialmedia.videona.presentation.views.activity.VideoFullScreenPreviewActivity"
    android:background="@android:color/black" >

        <VideoView
            android:id="@+id/edit_preview_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:transitionName="preview of video" />

        <ImageButton
            android:id="@+id/edit_button_fullscreen_out"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/edit_preview_player"
            android:layout_alignLeft="@+id/edit_preview_player"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/common_icon_fullscreen_out_selector" />

        <ImageButton
            android:id="@+id/share_button_share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/share_activity_button_share_selector"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/edit_button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/common_icon_play_on_normal" />

        <TextView
            android:id="@+id/edit_text_start_trim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_preview_player"
            android:layout_marginBottom="40dp"
            android:layout_alignLeft="@+id/edit_preview_player"
            android:text="00:00"
            android:layout_marginLeft="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/edit_text_end_trim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_preview_player"
            android:layout_marginBottom="40dp"
            android:layout_alignRight="@+id/edit_preview_player"
            android:text="00:00"
            android:layout_marginRight="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <SeekBar
            android:id="@+id/edit_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="18dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:indeterminate="false"
            android:longClickable="true"
            android:maxHeight="2dp"
            android:progressDrawable="@color/colorAccent"
            android:layout_alignBottom="@+id/edit_preview_player" />

</RelativeLayout>
