<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/VideonaTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/VideonaTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.videonasocialmedia.videona.presentation.views.customviews.AspectRatioVideoView
            android:id="@+id/video_trim_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:aspect="sixteen_nine"/>

        <ImageButton
            android:id="@+id/button_trim_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:src="@drawable/common_icon_play" />

        <SeekBar
            android:id="@+id/seekbar_trim_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/video_trim_preview"
            android:progressDrawable="@color/colorAccent"
            android:maxHeight="1dp"
            android:layout_marginBottom="4dp" />

        <ImageButton
            android:id="@+id/button_trim_room_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_icon_expand"
            android:layout_alignTop="@+id/video_trim_preview"
            android:layout_alignRight="@+id/video_trim_preview"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:scaleType="fitCenter"/>

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.videonasocialmedia.videona.presentation.views.customviews.TrimRangeSeekBarView
            android:id="@+id/rangeSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bar_color="#88c14c"
            app:bar_height="50dp"
            app:background_color="#3c3f41"
            app:selected_bar_color="#e77e2c"
            app:thumb_image="@drawable/activity_edit_icon_thumb_left_normal"
            app:thumb_image_max="@drawable/activity_edit_icon_thumb_left_normal"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/trim_text_start_trim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_below="@+id/rangeSeekBar"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/trim_text_end_trim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_below="@+id/rangeSeekBar"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/trim_text_time_trim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            android:visibility="visible"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentBottom="false"
            android:layout_marginBottom="4dp"
            android:layout_above="@+id/rangeSeekBar"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/trim_text_info_trim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recorta tu clip"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"
            android:visibility="visible"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentBottom="false"
            android:layout_marginBottom="16dp"
            android:layout_above="@+id/trim_text_time_trim"
            android:layout_centerHorizontal="true"
            />


        <ImageButton
            android:id="@+id/button_trim_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:src="@drawable/edit_activity_button_cancel_selector"/>

        <ImageButton
            android:id="@+id/button_trim_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/common_icon_ok_normal"/>

    </RelativeLayout>



</LinearLayout>