<resources>

    <attr name="themeName" format="string"/>
    <attr name="ic_settings_videona" format="reference"/>
    
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="border_overlay" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AspectRatioVideoView">
        <attr name="aspect" format="enum">
            <enum name="four_three" value="1"/>
            <enum name="sixteen_nine" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="RangeSeekbar">
        <attr name="background_color" format="reference|color"/>
        <attr name="bar_color" format="reference|color"/>
        <attr name="bar_height" format="dimension"/>
        <attr name="selected_bar_color" format="reference|color"/>
        <attr name="thumb_image" format="reference"/>
        <attr name="thumb_image_max" format="reference"/>
    </declare-styleable>

    <declare-styleable name="GoalProgressBar">
        <attr name="goalIndicatorHeight" format="dimension"/>
        <attr name="goalIndicatorThickness" format="dimension"/>
        <attr name="firstGoalReachedColor" format="color"/>
        <attr name="firstGoalNotReachedColor" format="color"/>
        <attr name="secondGoalReachedColor" format="color"/>
        <attr name="secondGoalNotReachedColor" format="color"/>
        <attr name="unfilledSectionColor" format="color"/>
        <attr name="barThickness" format="dimension"/>
        <attr name="indicatorType" format="enum">
            <enum name="line" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="square" value="2"/>
        </attr>
    </declare-styleable>
    
</resources>

