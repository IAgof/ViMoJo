<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        android:minHeight="160dp"
        style="?attr/cardViewStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/camera_setting_title_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="Camera Pro/Basic"
                />

            <RadioGroup
                android:id="@+id/camera_setting_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

            </RadioGroup>

            <TextView
                android:id="@+id/camera_setting_text_not_available"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:text="@string/preference_not_available"
                android:textColor="?attr/colorAccent"
                />
            </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>