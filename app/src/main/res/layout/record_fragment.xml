<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.videonasocialmedia.videona.presentation.views.GLCameraEncoderView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.videonasocialmedia.videona.presentation.views.CustomManualFocusView
        android:id="@+id/customManualFocusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <ImageView
        android:id="@+id/rotateDeviceHint"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/common_icon_rotate_device" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/record_layout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="71"></RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5" />

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8">

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"></RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="9">

                                <ImageButton
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/button_navigate_drawer"
                                    android:src="@drawable/common_icon_drawer_normal"
                                    android:background="@null"
                                    android:padding="16dp"
                                    android:visibility="visible" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="9"></RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="37"></RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="44"
                android:gravity="bottom">

                <RelativeLayout
                    android:id="@+id/relativelayout_camera_effect_fx"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="false"
                    android:layout_marginBottom="-80dp"
                    android:layout_centerVertical="true">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/record_catalog_recycler_fx"
                        android:scrollbars="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout_camera_effect_color"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="false"
                    android:layout_marginBottom="-80dp"
                    android:layout_centerVertical="true">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/record_catalog_recycler_color"
                        android:scrollbars="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/linearLayoutRecTimer"
                            android:measureWithLargestChild="false"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="false"
                            android:layout_weight="2"
                            android:layout_alignParentRight="false"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:gravity="right"
                            android:layout_alignParentEnd="false"
                            android:baselineAligned="false"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imageRecPoint"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_toStartOf="@+id/chronometer_record"
                                android:src="@anim/activity_record_drawable_rec_progress"
                                android:background="@color/pastel_palette_grey_record"
                                android:visibility="invisible"
                                android:paddingLeft="4dp"
                                android:alpha="0.5" />

                            <Chronometer
                                android:id="@+id/chronometer_record"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center_vertical"
                                android:textSize="18sp"
                                android:background="@color/pastel_palette_grey_record"
                                android:textColor="@android:color/white"
                                android:text="00:00"
                                android:gravity="center_vertical"
                                android:paddingRight="16dp"
                                android:paddingLeft="8dp"
                                android:alpha="0.5" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="10"></RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="8">

                                <ImageButton
                                    android:id="@+id/button_navigate_edit"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center_horizontal|end"
                                    android:background="@null"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/activity_record_edit_normal"
                                    android:visibility="visible"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="12dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="24"
                        android:background="@drawable/activity_record_icon_rec_circle"
                        android:alpha="0.5">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8">

                                    <ImageButton
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:id="@+id/button_camera_effect_color"
                                        android:src="@drawable/activity_record_icon_filters_normal"
                                        android:visibility="visible"
                                        android:scaleType="fitCenter"
                                        android:paddingRight="4dp"
                                        android:paddingLeft="28dp"
                                        android:paddingTop="28dp"
                                        android:paddingBottom="4dp"
                                        android:background="@null" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8">

                                    <ImageButton
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:id="@+id/button_change_camera"
                                        android:src="@drawable/activity_record_change_camera_normal"
                                        android:visibility="visible"
                                        android:background="@null"
                                        android:paddingRight="24dp"
                                        android:paddingLeft="8dp"
                                        android:paddingTop="20dp"
                                        android:paddingBottom="12dp"
                                        android:scaleType="fitCenter" />
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8"
                                    >

                                    <ImageButton
                                        android:id="@+id/button_play"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:src="@drawable/activity_record_icon_play_normal"
                                        android:visibility="visible"
                                        android:background="@null"
                                        android:scaleType="fitCenter"
                                        android:layout_weight="6"
                                        android:padding="16dp"
                                        />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8" >

                                    <ImageButton
                                        android:id="@+id/button_record"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:src="@drawable/activity_record_icon_rec_normal"
                                        android:visibility="visible"
                                        android:background="@null"
                                        android:scaleType="fitCenter"
                                        android:layout_weight="6"
                                        />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="8">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2" />

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8" >

                                    <ImageButton
                                        android:id="@+id/button_camera_effect_fx"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:background="@null"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/record_activity_button_camera_effect_fx_selector"
                                        android:layout_weight="6"
                                        android:paddingRight="4dp"
                                        android:paddingLeft="28dp"
                                        android:paddingTop="4dp"
                                        android:paddingBottom="28dp"
                                        />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="8" >

                                    <ImageButton
                                        android:id="@+id/button_flash_mode"
                                        android:src="@drawable/record_activity_icon_flash_camera_selector"

                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:background="@null"
                                        android:scaleType="fitCenter"

                                        android:layout_weight="6"
                                        android:paddingRight="24dp"
                                        android:paddingLeft="8dp"
                                        android:paddingTop="12dp"
                                        android:paddingBottom="20dp"
                                        />
                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9"></RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

