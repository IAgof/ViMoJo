<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/music_detail_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <com.videonasocialmedia.vimojo.presentation.views.customviews.ToolbarNavigator
                android:id="@+id/navigator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                app:music_selected="true"
                />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.videonasocialmedia.vimojo.presentation.views.customviews.VideonaPlayerExo
            android:id="@+id/videona_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                >

                <ImageView
                    android:id="@+id/music_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="4dp"
                    android:minHeight="150dp"
                    android:paddingBottom="?attr/actionBarSize"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/gatito_rules_pressed"/>

                <TextView
                    android:id="@+id/music_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/music_image"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="#000"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/textColorTitleToolbar"
                    android:textSize="18sp"
                    tools:text="El título de la canción"
                    />

                <TextView
                    android:id="@+id/music_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/music_image"
                    android:layout_below="@id/music_title"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:background="#000"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/textColorTitleToolbar"
                    android:textSize="16sp"
                    tools:text="El autor de la canción"
                    />

                <FrameLayout
                    android:id="@+id/scene_root"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="?attr/actionBarSize"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:minHeight="40dp"

                    tools:layout="@layout/activity_music_detail_scene_accept_cancel"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>