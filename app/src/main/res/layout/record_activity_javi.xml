<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.videonasocialmedia.videona.presentation.views.GLCameraEncoderView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.videonasocialmedia.videona.presentation.views.CustomManualFocusView
        android:id="@+id/customManualFocusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:id="@+id/rec_1"
        android:layout_width="120dp"
        android:layout_height="450dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/button_navigate_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/button_record"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|end"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/common_icon_edit_normal"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/button_record"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|end"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/activity_record_icon_rec_normal" />

        <ImageButton
            android:id="@+id/button_camera_effect_fx"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/button_camera_effect_color"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|end"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/record_activity_button_camera_effect_fx_selector"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/button_camera_effect_color"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal|end"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/record_activity_button_camera_effect_color_selector"
            android:visibility="visible" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/rotateDeviceHint"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/common_icon_rotate_device"
        android:visibility="gone" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/record_catalog_recycler_fx"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-100dp"
        android:layout_toStartOf="@+id/rec_1"
        android:scrollbars="horizontal" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/record_catalog_recycler_color"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-100dp"
        android:layout_toStartOf="@+id/rec_1"
        android:scrollbars="horizontal" />


    <LinearLayout
        android:id="@+id/linearLayoutRecordCameraOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="20dp"
        android:background="@color/transparent_palette_grey"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_flash_mode"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/record_activity_icon_flash_camera_selector"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/button_change_camera"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/activity_record_change_camera_normal"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/button_settings_camera"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/record_activity_button_settings_camera_selector" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayoutRecTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:gravity="center_horizontal"
        android:measureWithLargestChild="false"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/imageRecPoint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent_palette_grey"
            android:src="@anim/activity_record_drawable_rec_progress"
            android:visibility="invisible" />

        <Chronometer
            android:id="@+id/chronometer_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent_palette_grey"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>

