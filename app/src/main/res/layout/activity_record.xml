<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_record_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayoutRecordActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/framelayout_camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"></FrameLayout>


        <RelativeLayout
            android:id="@+id/rec_1"
            android:layout_width="120dp"
            android:layout_height="450dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false">

            <ImageButton
                android:id="@+id/button_record"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|end"
                android:background="@null"
                android:paddingEnd="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/activity_record_icon_rec_normal" />

            <Chronometer
                android:id="@+id/chronometer_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="false"
                android:layout_below="@+id/button_record"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/button_color_effect"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_above="@+id/button_record"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:background="@null"
                android:focusableInTouchMode="false"
                android:padding="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/common_icon_filters_normal" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/button_color_effect"
                android:background="@null"
                android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                android:visibility="invisible" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_flash_mode"
                android:src="@drawable/gatito_rules"
                android:layout_below="@+id/chronometer_record"
                android:layout_alignStart="@+id/chronometer_record"
                android:visibility="gone" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativelayout_color_effect"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">

            <org.lucasr.twowayview.TwoWayView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/listview_items_color_effect"
                style="@style/TwoWayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:drawSelectorOnTop="false"
                tools:context=".RecordActivity" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageBetaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:contentDescription="Beta Label"
            android:src="@drawable/beta_label" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_change_camera"
            android:src="@drawable/gatito_rules"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- Left Drawrer -->


    <fragment
        android:id="@+id/activity_record_navigation_drawer"
        android:name="com.videonasocialmedia.videona.presentation.views.fragment.NavigationDrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/common_fragment_navigator" />

</android.support.v4.widget.DrawerLayout>