<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    xmlns:tools="http://schemas.android.com/tools">

    <com.videonasocialmedia.avrecorder.view.GLCameraView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/activity_record_icon_clear"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp" />

        <com.videonasocialmedia.vimojo.presentation.views.customviews.CircleImageView
            android:id="@+id/button_navigate_edit"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/activity_record_navigator_edit_selector"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_view_num_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical|center_horizontal"
            android:scaleType="fitCenter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="27sp"
            tools:text="0"
            android:layout_alignEnd="@+id/button_navigate_edit" />

        <LinearLayout
            android:id="@+id/picometer"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGreyTransparent"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="false"
            android:layout_toEndOf="@id/clear_button"
            android:layout_marginLeft="24dp">

            <SeekBar
                android:layout_width="200dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_brightness_5_white_48px"
                android:indeterminate="false"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/hud"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorGreyTransparent">

                <ImageView
                    android:id="@+id/activity_record_icon_battery"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_icon_battery_charged"
                    android:visibility="visible"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/activity_record_icon_memory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:src="@drawable/activity_record_icon_memory"
                    android:layout_marginLeft="16dp" />

                <ImageView
                    android:id="@+id/activity_record_icon_resolution"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:src="@drawable/activity_record_icon_resolution_1080"
                    android:layout_marginLeft="16dp" />

                <ImageView
                    android:id="@+id/activity_record_icon_geolocation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:src="@drawable/activity_record_icon_geolocation_pressed"
                    android:layout_marginLeft="16dp" />

                <ImageView
                    android:id="@+id/activity_record_icon_microphone_"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:src="@drawable/activity_record_icon_microphone_pressed"
                    android:layout_marginLeft="16dp" />

            </LinearLayout>

        </LinearLayout>


        <!-- Zoom -->

        <LinearLayout
            android:id="@+id/zoom_bar"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGreyTransparent"
            android:visibility="invisible"
            android:layout_marginLeft="16dp">

            <TextView
                android:text="100%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:src="@drawable/ic_color_lens_white_48px"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textColorButton" />
            <SeekBar
                android:layout_width="24dp"
                android:layout_height="200dp"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:src="@drawable/ic_brightness_5_white_48px"
                android:layout_gravity="center_horizontal"
                android:indeterminate="false"
                android:visibility="invisible" />
            <TextView
                android:text="0%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:src="@drawable/ic_brightness_5_white_48px"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textColorButton" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/controls"
            android:layout_width="160dp"
            android:layout_height="210dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/activity_record_icon_rec_circle"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                    <ImageButton
                        android:id="@+id/button_toggle_flash"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@null"
                        android:paddingBottom="4dp"
                        android:paddingLeft="28dp"
                        android:paddingRight="4dp"
                        android:paddingTop="28dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_record_icon_white_balance_flash"/>

                    <ImageButton
                        android:id="@+id/button_change_camera"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@null"
                        android:paddingBottom="12dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="24dp"
                        android:paddingTop="20dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_record_icon_change_camera_normal"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>


                    <ImageButton
                        android:id="@+id/button_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@null"
                        android:padding="16dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_record_icon__share"/>

                    <ImageButton
                        android:id="@+id/button_record"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_record_icon_rec"
                        android:visibility="visible"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>

                    <ImageButton
                        android:id="@+id/settings_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:alpha="0.25"
                        android:background="@null"
                        android:paddingBottom="28dp"
                        android:paddingLeft="28dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_record_icon_controls"/>

                    <ImageButton
                        android:id="@+id/button_navigate_settings"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="@null"
                        android:paddingBottom="20dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="24dp"
                        android:paddingTop="12dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_record_icon_settings"
                        android:visibility="visible"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/settings_bar_submenu"
            android:layout_above="@+id/settings_bar"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGreyTransparent"
            android:visibility="invisible"
            android:layout_marginBottom="4dp">

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_white_balance_automatic"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_white_balance_cloudy"
                android:layout_marginLeft="16dp" />

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_white_balance_daylight"
                android:layout_marginLeft="16dp" />

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_white_balance_fluorescent"
                android:layout_marginLeft="16dp" />

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_white_balance_tungsten"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/settings_bar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGreyTransparent"
            android:layout_marginBottom="8dp"
            android:visibility="invisible">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:src="@drawable/activity_record_icon_zoom"
                android:id="@+id/zoom"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_iso"
                android:id="@+id/iso"
                android:layout_marginLeft="24dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_exposure"
                android:id="@+id/exposition_compensation"
                android:layout_marginLeft="24dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_mode"
                android:id="@+id/af_selection"
                android:layout_marginLeft="24dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_white_balance"
                android:id="@+id/wd"
                android:layout_marginLeft="24dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_text"
                android:id="@+id/text"
                android:layout_marginLeft="24dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00ffffff"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/activity_record_icon_metering_evaluative"
                android:id="@+id/measurement_mode"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="16dp" />

        </LinearLayout>

        <!-- esta es la copia de la barra principal, Submenu -->

        <ImageView
            android:id="@+id/rotateDeviceHint"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/common_icon_rotate_device"
            android:visibility="gone"/>

        <!-- Picometro -->
         <ImageButton
             android:id="@+id/button_record_screen_clean"
             android:layout_width="72dp"
             android:layout_height="72dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_marginBottom="16dp"
             android:layout_marginRight="16dp"
             android:background="@null"
             android:alpha="0.5"
             android:scaleType="fitCenter"
             android:src="@drawable/activity_record_icon_rec"
             android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/control_chronometer_and_rec_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorGreyTransparent"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imageRecPoint"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:alpha="0.5"
                android:paddingLeft="4dp"
                android:src="@anim/activity_record_drawable_rec_progress"
                android:visibility="invisible"
                />

            <Chronometer
                android:id="@+id/chronometer_record"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:alpha="0.5"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>