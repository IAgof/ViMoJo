<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    >


    <FrameLayout

        android:id="@+id/camera_preview"

        android:layout_width="fill_parent"

        android:layout_height="fill_parent"

        android:layout_weight="1"

        android:layout_centerInParent="true"

        android:layout_alignParentStart="true">


    </FrameLayout>


    <RelativeLayout

        android:layout_width="120dp"

        android:layout_height="450dp"

        android:layout_alignParentStart="false"

        android:layout_alignParentEnd="true"

        android:id="@+id/rec_1">


        <ImageButton

            android:id="@+id/button_capture"

            android:layout_width="100dp"

            android:layout_height="100dp"

            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"

            android:layout_gravity="center_horizontal|right"

            android:background="@null"

            android:scaleType="fitCenter"

            android:src="@drawable/ic_rec_buttom"

            android:layout_alignParentRight="true"

            android:paddingRight="16dp" />


        <Chronometer

            android:id="@+id/chronometerVideo"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:textSize="18sp"

            android:layout_alignWithParentIfMissing="false"

            android:layout_gravity="center_vertical"

            android:layout_marginRight="16dp"

            android:paddingLeft="16dp"

            android:paddingRight="16dp"

            android:layout_below="@+id/button_capture"

            android:layout_centerHorizontal="true" />


        <ImageButton

            android:layout_width="25dp"

            android:layout_height="25dp"

            android:text="New Button"

            android:id="@+id/btnColorEffect"

            android:src="@drawable/ic_filters"

            android:background="@null"

            android:focusableInTouchMode="false"

            android:scaleType="fitCenter"

            android:nestedScrollingEnabled="true"

            android:layout_above="@+id/button_capture"

            android:layout_centerHorizontal="true"

            android:layout_margin="16dp" />


        <ImageButton

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:id="@+id/imageButton5"

            android:background="@null"

            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"

            android:layout_alignParentTop="true"

            android:layout_alignStart="@+id/btnColorEffect"

            android:layout_marginTop="16dp" />

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="400dp"

        android:layout_height="100dp"

        android:layout_alignParentBottom="true"

        android:layout_centerInParent="true"
        android:id="@+id/relativeLayoutColorEffects">


        <org.lucasr.twowayview.TwoWayView

            xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:tools="http://schemas.android.com/tools"

            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/lvItems"

            style="@style/TwoWayView"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:drawSelectorOnTop="false"

            tools:context=".RecordActivity"

            android:layout_alignParentBottom="true"

            android:layout_centerInParent="true" />

    </RelativeLayout>


</RelativeLayout>

