<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_activity_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.views.activity.EditActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/edit_tools_cardview"
            android:layout_below="@+id/videona_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            style="?attr/cardViewStyle">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <LinearLayout
                        android:id="@+id/linear_layout_edit_trim"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/button_edit_trim"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_weight="1"
                                android:scaleType="fitCenter"
                                android:tint="?android:attr/textColorPrimary"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:src="@drawable/activity_edit_clip_trim_normal"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:id="@+id/text_edit_trim"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_edit_trim"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:paddingTop="2dp"
                                />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_edit_split"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/button_edit_split"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:tint="?android:attr/textColorPrimary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/activity_edit_clip_divide_normal"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/text_edit_split"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_edit_split"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:paddingTop="2dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_edit_duplicate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/button_edit_duplicate"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:tint="?android:attr/textColorPrimary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/activity_edit_clip_duplicate_normal"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/text_edit_duplicate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_edit_duplicate"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:paddingTop="2dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_layout_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/button_edit_add_text"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            android:tint="?android:attr/textColorPrimary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/activity_edit_clip_text_normal"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/text_edit_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_edit_text"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:paddingTop="2dp"
                            />
                    </LinearLayout>
                </LinearLayout>

        </android.support.v7.widget.CardView>

    <com.videonasocialmedia.vimojo.videonaTimeLine.view.customview.VideonaTimeLine
        android:id="@+id/videona_time_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_tools_cardview"
        android:layout_marginTop="16dp" />

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bb_height"
        app:bb_tabXmlResource="@xml/bottombar_tabs"
        app:bb_showShadow="false"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTransparent"
        app:bb_activeTabColor="?attr/colorAccent"
        />
    </RelativeLayout>

