<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingTop="2dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativeLayoutTop"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1">


                    <ImageButton
                        android:id="@+id/buttonCancelEditActivity"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit_activity_button_cancel_selector" />

                    <ImageButton
                        android:id="@+id/buttonOkEditActivity"
                        android:layout_width="28dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_activity_button_share_selector" />


                    <TextView
                        android:id="@+id/edit_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/edit_title_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/videona_blue_5" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/edit_view_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/edit_fragment_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0.5">
                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutPreviewVideo"
                        android:layout_width="370dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/relativeLayoutTrim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/linearLayoutFrames"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="1dp"
                                android:layout_marginTop="1dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/activity_edit_image_frame_preview_default"
                                        android:visibility="visible" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/activity_edit_image_frame_preview_default"
                                        android:visibility="visible" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/activity_edit_image_frame_preview_default"
                                        android:visibility="visible" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/activity_edit_image_frame_preview_default"
                                        android:visibility="visible" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame5"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/activity_edit_image_frame_preview_default"
                                        android:visibility="visible" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame6"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/activity_edit_image_frame_preview_default"
                                        android:visibility="visible" />
                                </RelativeLayout>

                                <!--
                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame7"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:src="@drawable/common_filter_aqua_ad1_normal"
                                        android:scaleType="fitXY" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame8"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:src="@drawable/common_filter_aqua_ad1_normal"
                                        android:scaleType="fitXY" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/relativeLayoutImageFrame9"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="top"
                                    android:layout_weight="1">

                                    <ImageView
                                        android:id="@+id/imageViewFrame9"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible"
                                        android:src="@drawable/common_filter_aqua_ad1_normal"
                                        android:scaleType="fitXY" />
                                </RelativeLayout>
                                -->

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutRangeSeekBar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="false"
                            android:layout_alignParentTop="false"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:backgroundTint="@color/pastel_palette_blue"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/linearLayoutRangeSeekBar"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_alignParentEnd="false"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentTop="false"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:orientation="horizontal" />
                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/edit_bottom_panel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/edit_view_panel"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/edit_left_panel"
                    android:layout_toStartOf="@+id/edit_right_panel">

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/edit_right_panel"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true">

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/edit_left_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/edit_button_look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:alpha="0.20"
                        android:background="@color/pastel_palette_yellow"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_edit_icon_look_normal" />

                    <ImageButton
                        android:id="@+id/edit_button_fx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:alpha="0.20"
                        android:background="@color/pastel_palette_grey"
                        android:padding="15dp"
                        android:src="@drawable/activity_edit_icon_fx_normal" />

                    <ImageButton
                        android:id="@+id/edit_button_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/common_button_selector_blue_pastel"
                        android:padding="15dp"
                        android:src="@drawable/edit_activity_button_audio_selector" />

                    <ImageButton
                        android:id="@+id/edit_button_scissor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_button_selector_orange_pastel"
                        android:padding="15dp"
                        android:src="@drawable/edit_activity_button_scissor_selector" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageBetaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:contentDescription="Beta Label"
            android:src="@drawable/beta_label" />

    </RelativeLayout>

    <!-- Left Drawrer -->
    <fragment
        android:id="@+id/activity_edit_navigation_drawer"
        android:name="com.videonasocialmedia.videona.presentation.views.fragment.NavigationDrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/common_fragment_navigator" />

</android.support.v4.widget.DrawerLayout>