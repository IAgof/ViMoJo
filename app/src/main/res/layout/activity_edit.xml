<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingTop="2dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativeLayoutTop"
                    android:layout_width="fill_parent"
                    android:layout_height="41dp"
                    android:layout_weight="1">


                    <ImageButton
                        android:id="@+id/buttonCancelEditActivity"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/edit_activity_button_cancel_selector" />

                    <ImageButton
                        android:id="@+id/buttonOkEditActivity"
                        android:layout_width="38dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/share_activity_button_share_selector" />


                    <TextView
                        android:id="@+id/edit_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/edit_title_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/videona_blue_5" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/edit_fragment_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_toEndOf="@+id/edit_left_panel"
                    android:layout_toStartOf="@+id/edit_right_panel"
                    android:minHeight="200dp" />

                <!-- <LinearLayout
                     android:id="@+id/edit_view_panel"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_centerHorizontal="true"
                     android:background="@android:color/holo_green_light"
                     android:orientation="vertical">


                 </LinearLayout>-->

                <FrameLayout
                    android:id="@+id/edit_bottom_panel"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_alignBottom="@id/edit_fragment_preview"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/edit_left_panel"
                    android:layout_toStartOf="@+id/edit_right_panel" />


                <FrameLayout
                    android:id="@+id/edit_right_panel"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />

                <LinearLayout
                    android:id="@+id/edit_left_panel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:orientation="vertical">


                    <ImageButton
                        android:id="@+id/edit_button_scissor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/pastel_palette_yellow"
                        android:padding="15dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/edit_activity_button_scissor_selector" />

                    <ImageButton
                        android:id="@+id/edit_button_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:background="@color/pastel_palette_grey"
                        android:padding="15dp"
                        android:src="@drawable/edit_activity_button_audio_selector" />

                    <ImageButton
                        android:id="@+id/edit_button_fx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0.5dp"
                        android:alpha="0.20"
                        android:background="@drawable/common_button_selector_blue_pastel"
                        android:padding="15dp"
                        android:src="@drawable/activity_edit_icon_fx_normal" />

                    <ImageButton
                        android:id="@+id/edit_button_look"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.20"
                        android:background="@drawable/common_button_selector_orange_pastel"
                        android:padding="15dp"
                        android:src="@drawable/activity_edit_icon_look_normal" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageBetaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:contentDescription="Beta Label"
            android:src="@drawable/beta_label" />

    </RelativeLayout>

    <!-- Left Drawer -->
    <fragment
        android:id="@+id/activity_edit_navigation_drawer"
        android:name="com.videonasocialmedia.videona.presentation.views.fragment.NavigationDrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/common_fragment_navigator" />

</android.support.v4.widget.DrawerLayout>