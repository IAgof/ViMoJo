<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit_left_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/edit_view_panel"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/edit_button_scissor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_edit_icon_fx_normal" />

        <ImageButton
            android:id="@+id/edit_button_fx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_edit_icon_fx_normal" />

        <ImageButton
            android:id="@+id/edit_button_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_edit_icon_fx_normal" />

        <ImageButton
            android:id="@+id/edit_button_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_edit_icon_fx_normal" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/edit_right_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/edit_bottom_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/edit_view_panel">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/edit_view_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <VideoView
            android:id="@+id/edit_preview_player"
            android:layout_width="320dp"
            android:layout_height="180dp" />

    </LinearLayout>

</RelativeLayout>

