<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="420dp"
            android:layout_height="236dp"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center|top"
            android:id="@+id/relativeLayoutPreviewVideo"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center|top"
                android:id="@+id/relativeLayoutTrim">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:id="@+id/linearLayoutFrames"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <!-- Image 1  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame1"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame1"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- Image 2  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame2"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame2" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame2"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- Image 3  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame3"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame3" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame3"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- Image 4  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame4"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame4" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame4"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- Image 5  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame5"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame5" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame5"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- Image 6  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame6"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame6" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame6"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- Image 7  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame7"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame7" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame7"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- Image 8  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame8"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame8" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame8"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- Image 9  -->
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/relativeLayoutImageFrame9"
                        android:layout_weight="1">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:id="@+id/progressBarImageFrame9" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewFrame9"
                            android:visibility="gone" />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center|top"
                android:id="@+id/relativeLayoutRangeSeekBar">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/linearLayoutRangeSeekBar"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"></LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:id="@+id/RelativeLayout"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/LinearLayoutInfoVideoTrim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/DetailsVideoCut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:textColor="@color/videona_blue_1"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_above="@+id/relativeLayoutPreviewVideo"
            android:layout_alignParentStart="true">

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBarPoint"
                android:thumb="@drawable/point"
                android:progressDrawable="@color/pastel_palette_blue"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:maxHeight="4dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:progress="1" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButtonCut"
                android:src="@drawable/ic_validation"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_alignBottom="@+id/imageButtonPlay"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButtonMusic"
                android:background="@null"
                android:src="@drawable/ic_addmusic_buttom"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="fitCenter"
                android:layout_alignBottom="@+id/imageButtonPlay"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp" />

            <ImageButton
                android:layout_width="50dp"
                android:scaleType="fitCenter"
                android:layout_height="50dp"
                android:id="@+id/imageButtonPlay"
                android:background="@null"
                android:src="@drawable/ic_action_play"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>