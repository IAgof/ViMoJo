<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/imageBetaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:contentDescription="Beta Label"
            android:src="@drawable/beta_label"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/edit_left_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9">

                        <ImageButton
                            android:id="@+id/button_navigate_drawer"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:padding="20dp"
                            android:src="@drawable/common_icon_drawer" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="36">

                        <LinearLayout
                            android:id="@+id/edit_left_panel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="9">

                                <ImageButton
                                    android:id="@+id/edit_button_scissor"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:scaleType="fitCenter"
                                    android:padding="16dp"
                                    android:src="@drawable/edit_activity_button_scissor_selector"
                                    android:background="@null" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="9">

                                <ImageButton
                                    android:id="@+id/edit_button_audio"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:scaleType="fitCenter"
                                    android:padding="16dp"
                                    android:src="@drawable/edit_activity_button_audio_selector"
                                    android:layout_weight="1" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="9">

                                <ImageButton
                                    android:id="@+id/edit_button_fx"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:scaleType="fitCenter"
                                    android:padding="16dp"
                                    android:src="@drawable/activity_edit_icon_fx_normal"
                                    android:layout_weight="1"
                                    android:alpha="0.2" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="9">

                                <ImageButton
                                    android:id="@+id/edit_button_look"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:scaleType="fitCenter"
                                    android:padding="16dp"
                                    android:src="@drawable/activity_edit_icon_look_normal"
                                    android:alpha="0.2" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_middle_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="62">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/edit_top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="9">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/black"
                                        android:src="@drawable/edit_activity_icon_timer"/>
                                    <TextView
                                        android:id="@+id/project_duration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/videona_blue_5"
                                        android:text="00:00"/>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/edit_top_layout_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="44">

                                <TextView
                                    android:id="@+id/edit_title_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/edit_title_name"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/videona_blue_6" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="9">

                                android:layout_weight="9" >
                                <TextView
                                    android:id="@+id/num_videos"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="0"
                                    android:textColor="@color/videona_blue_5"
                                    android:gravity="center"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/edit_center_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="41">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/edit_center_left"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="9">

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="44">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="32"
                                        android:id="@+id/edit_center_center_layout" >

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <FrameLayout
                                                android:id="@+id/edit_fragment_trim_preview"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center_horizontal"
                                                android:visibility="visible" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <FrameLayout
                                                android:id="@+id/edit_fragment_all_preview"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:visibility="visible" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/edit_center_bottom_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginBottom="8dp"
                                        android:layout_weight="9">

                                        <FrameLayout
                                            android:id="@+id/edit_bottom_panel"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />

                                    </RelativeLayout>
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/edit_center_right"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="9">

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_right_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9">

                        <ImageButton
                            android:id="@+id/buttonOkEditActivity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:scaleType="fitCenter"
                            android:padding="20dp"
                            android:src="@drawable/edit_activity_icon_save_selector" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="36">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="28"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <FrameLayout
                                android:id="@+id/edit_right_panel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Left Drawer -->
    <fragment
        android:id="@+id/activity_edit_navigation_drawer"
        android:name="com.videonasocialmedia.videona.presentation.views.fragment.NavigationDrawerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/common_fragment_navigator" />

</android.support.v4.widget.DrawerLayout>