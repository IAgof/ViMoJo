<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="2dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayoutTop"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1">


                <ImageButton
                    android:id="@+id/buttonCancelEditActivity"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit_activity_icon_cancel_normal" />

                <ImageButton
                    android:id="@+id/buttonOkEditActivity"
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit_activity_icon_ok_normal" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Editor Room"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/videona_blue_5" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/edit_view_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5">

                    <VideoView
                        android:id="@+id/edit_preview_player"
                        android:layout_width="320dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal" />

                    <ImageButton
                        android:id="@+id/edit_button_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/common_icon_play_on_normal" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayoutPreviewVideo"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/relativeLayoutTrim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linearLayoutFrames"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame3"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame4"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame5"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame6"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame7"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame8"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relativeLayoutImageFrame9"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="top"
                                android:layout_weight="1">

                                <ProgressBar
                                    android:id="@+id/progressBarImageFrame9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent" />

                                <ImageView
                                    android:id="@+id/imageViewFrame9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutRangeSeekBar"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentTop="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/pastel_palette_blue"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linearLayoutRangeSeekBar"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentStart="false"
                            android:layout_alignParentTop="false"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:orientation="horizontal" />
                    </RelativeLayout>



                </RelativeLayout>

                <SeekBar
                    android:id="@+id/edit_seek_bar"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:indeterminate="false"
                    android:longClickable="true"
                    android:maxHeight="2dp"
                    android:progressDrawable="@color/videona_blue_5" />

            </LinearLayout>


            <FrameLayout
                android:id="@+id/edit_bottom_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/edit_view_panel"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/edit_left_panel"
                android:layout_toStartOf="@+id/edit_right_panel">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/edit_right_panel"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                >

            </FrameLayout>

            <LinearLayout
                android:id="@+id/edit_left_panel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/edit_button_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.20"
                    android:layout_marginBottom="2dp"
                    android:background="@color/pastel_palette_yellow"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_edit_icon_look_normal" />

                <ImageButton
                    android:id="@+id/edit_button_fx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.20"
                    android:background="@color/pastel_palette_grey"
                    android:layout_marginBottom="2dp"
                    android:padding="15dp"
                    android:src="@drawable/activity_edit_icon_fx_normal" />

                <ImageButton
                    android:id="@+id/edit_button_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/pastel_palette_blue"
                    android:padding="15dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/activity_edit_icon_audio_normal" />

                <ImageButton
                    android:id="@+id/edit_button_scissor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/pastel_palette_orange"
                    android:padding="15dp"
                    android:src="@drawable/activity_edit_icon_cut_normal" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageBetaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:contentDescription="Beta Label"
        android:src="@drawable/beta_label" />

</RelativeLayout>