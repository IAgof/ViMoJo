<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout_video_split"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/VideonaTheme.PopupOverlay"
                app:theme="@style/VideonaDrawerIconStyle"/>

        </android.support.design.widget.AppBarLayout>

    <com.videonasocialmedia.videonamediaframework.playback.VideonaPlayerExo
        android:id="@+id/videona_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/split_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                >

                <SeekBar
                    android:id="@+id/seekBar_split"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="120dp"
                    android:background="@null"
                    android:maxHeight="1dp"
                    android:paddingBottom="0dp"
                    android:progressDrawable="@color/colorAccent"
                    android:splitTrack="false"
                    android:thumb="@drawable/ic_circular_thumb_seekbar"

                    />


                <TextView
                    android:id="@+id/text_time_split"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/seekBar_split"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="00:00"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/text_info_split"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/seekBar_split"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="60dp"
                    android:text="@string/text_edit_info_split"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:visibility="visible"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/advance_split_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_above="@+id/cancel_accept_split_cardview"
                android:layout_below="@+id/split_cardview">

                <RelativeLayout
                    android:id="@+id/advance_split_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="1dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    >

                    <ImageButton
                        android:id="@+id/player_advance_low_backward_start_split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:background="@null"
                        android:src="@drawable/activity_edit_player_advance_low" />

                    <ImageButton
                        android:id="@+id/player_advance_medium_backward_start_split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_toRightOf="@+id/player_advance_low_backward_start_split"
                        android:background="@null"
                        android:src="@drawable/activity_edit_player_advance_medium" />

                    <ImageButton
                        android:id="@+id/player_advance_high_backward_start_trim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="false"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:padding="8dp"
                        android:layout_toRightOf="@+id/player_advance_medium_backward_start_split"
                        android:background="@null"
                        android:src="@drawable/activity_edit_player_advance_high" />

                    <ImageButton
                        android:id="@+id/player_advance_high_forward_end_split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:rotation="180"
                        android:layout_toLeftOf="@+id/player_advance_medium_forward_end_split"
                        android:src="@drawable/activity_edit_player_advance_high" />


                    <ImageButton
                        android:id="@+id/player_advance_medium_forward_end_split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:rotation="180"
                        android:layout_toLeftOf="@+id/player_advance_low_forward_end_split"
                        android:src="@drawable/activity_edit_player_advance_medium" />

                    <ImageButton
                        android:id="@+id/player_advance_low_forward_end_split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:rotation="180"
                        android:src="@drawable/activity_edit_player_advance_low" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cancel_accept_split_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="14dp">


                <ImageButton
                    android:id="@+id/button_split_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:tint="#f05228"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/activity_edit_common_icon_cancel"/>

                <ImageButton
                    android:id="@+id/button_split_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:tint="#6ac259"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/activity_edit_common_icon_accept"/>

            </android.support.v7.widget.CardView>

        </RelativeLayout>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>