<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/edit_fragment_look_button_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pastel_palette_green"
        android:padding="15dp"
        android:src="@drawable/activity_edit_icon_look_normal"
        android:layout_marginBottom="2dp"
        android:alpha="0.20" />

    <ImageButton
        android:id="@+id/edit_fragment_look_button_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pastel_palette_purple"
        android:padding="15dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/activity_edit_icon_look_normal"
        android:alpha="0.20" />

    <ImageButton
        android:id="@+id/edit_fragment_look_button_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pastel_palette_pink_2"
        android:padding="15dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/activity_edit_icon_look_normal"
        android:alpha="0.20" />

    <ImageButton
        android:id="@+id/edit_fragment_look_button_item4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/pastel_palette_red"
        android:padding="15dp"
        android:src="@drawable/activity_edit_icon_look_normal"
        android:alpha="0.20" />

</LinearLayout>