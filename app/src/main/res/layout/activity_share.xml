<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/linear_layout_activity_share"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:baselineAligned="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.views.activity.ShareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:baselineAligned="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginBottom="@dimen/bb_height">

    <com.videonasocialmedia.vimojo.presentation.views.customviews.VideonaPlayerExo
        android:id="@+id/videona_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/options_to_share_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    </LinearLayout>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:bb_tabXmlResource="@xml/bottombar_tabs"
        android:layout_alignParentBottom="true"
        />


    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_share_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/common_icon_add_white"
        app:backgroundTint="@color/colorAccent"
        app:layout_anchor="@id/linear_layout_activity_share"
        app:layout_anchorGravity="bottom|right|end"/>-->

</RelativeLayout>