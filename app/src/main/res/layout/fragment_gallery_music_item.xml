<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gallery_thumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:padding="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />

    <RelativeLayout
        android:id="@+id/gallery_overlay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/gallery_thumb"
        android:layout_alignEnd="@id/gallery_thumb"
        android:layout_alignStart="@id/gallery_thumb"
        android:layout_alignTop="@id/gallery_thumb"
        android:background="@drawable/fragment_gallery_music_overlay_selector_background"
        android:clickable="false">

        <ImageView
            android:id="@+id/gallery_overlay_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/common_gallery_overlay_icon_selector_background"
            android:clickable="false"
            android:src="@drawable/fragment_gallery_music_overlay_icon_selector_icon" />
    </RelativeLayout>

</RelativeLayout>