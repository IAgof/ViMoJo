<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/edit_fragment_scissors_button_add_clip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="16dp"
        android:src="@drawable/edit_fragment_scissors_icon_add_clip_normal"
        android:adjustViewBounds="false"
        android:layout_weight="9"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/edit_fragment_scissors_button_razor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="16dp"
        android:src="@drawable/edit_fragment_scissors_icon_razor_normal"
        android:layout_weight="9"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/edit_fragment_scissors_button_duplicate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="16dp"
        android:src="@drawable/edit_fragment_scissors_icon_duplicate_normal"
        android:layout_weight="9"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/edit_fragment_scissors_button_crop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="16dp"
        android:src="@drawable/common_icon_delete_normal"
        android:layout_weight="9"
        android:scaleType="fitCenter" />
</LinearLayout>