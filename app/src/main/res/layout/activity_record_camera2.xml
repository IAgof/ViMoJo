            android:layout_toLeftOf="@+id/button_to_show_controls_right"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null">

            <LinearLayout
                android:id="@+id/settings_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/button_to_show_controls_right"
                android:background="@null"
                android:visibility="visible"
                >

                <ImageButton
                    android:id="@+id/button_camera_default"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_record_ic_settings_default"
                    />

                <ImageButton
                    android:id="@+id/button_grid"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_record_ic_grid"
                    />

                <ImageButton
                    android:id="@+id/button_white_balance"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_record_ic_white_balance"
                    />

                <ImageButton
                    android:id="@+id/button_af_selection"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_record_ic_focus"
                    />

                <ImageButton
                    android:id="@+id/button_metering_mode"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
