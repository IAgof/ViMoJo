                <ImageButton
                    android:id="@+id/metering_mode_exposure_compensation"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_metering_manual"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/button_manual_exposure"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_manual_exposure"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

