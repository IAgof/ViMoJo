                android:background="@drawable/circle_background"
                android:scaleType="fitCenter"
                android:layout_above="@+id/button_record"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/slide_seekbar_submenu_cardview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_above="@+id/button_record"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorGreyTransparent"
                android:visibility="invisible"
                app:cardCornerRadius="8dp"
                app:cardElevation="@null">

                <RelativeLayout
                    android:id="@+id/slide_seekbar_submenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/button_record"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/seekBar_upper_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="4dp"
                        android:background="#00ffffff"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="100%"
                        android:textColor="@color/colorWhite"
                        android:textSize="8sp"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/seekBar_upper_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:background="#00ffffff"
                        android:padding="4dp"
                        android:text="100%"
                        tools:src="@drawable/activity_record_ic_focus_macro" />

                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/seekBar_lower_text"
                        android:layout_below="@+id/seekBar_upper_text"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                            android:id="@+id/seekBar_slide_left"
                            android:layout_width="0dp"
                            android:layout_height="132dp"
                            android:gravity="center"
                            android:progressTint="@color/colorWhite"
                            android:splitTrack="false"
                            android:thumbTint="@color/colorWhite"
                            app:seekBarRotation="CW270" /> <!-- Rotation: CW90 or CW270 -->
                    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

                    <TextView
                        android:id="@+id/seekBar_lower_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:background="#00ffffff"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="0%"
                        android:textColor="@color/colorWhite"
                        android:textSize="8sp"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/seekBar_lower_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:background="#00ffffff"
                        android:padding="4dp"
                        android:src="@drawable/activity_record_ic_focus_infinite"
                        android:text="100%"
                        tools:visibility="visible" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>


        <ImageButton
            android:id="@+id/button_to_hide_controls"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/activity_record_ic_show_menu_normal"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:layout_alignTop="@+id/button_to_show_controls_right"
            android:layout_toStartOf="@+id/button_record_slider_relativeLayout" />

        <ImageButton
            android:id="@+id/button_to_show_controls_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:background="@drawable/circle_background"
            android:scaleType="fitCenter"
            android:src="@drawable/activity_record_ic_controls"
            android:visibility="visible"
            android:layout_alignBottom="@+id/settings_bar_cardview"
            android:layout_alignStart="@+id/button_to_hide_controls"
            android:layout_toLeftOf="@+id/button_record_slider_relativeLayout"
            />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>


