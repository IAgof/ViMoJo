                    android:layout_height="match_parent"
                    android:layout_above="@+id/button_record"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/seekBar_upper_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:background="#00ffffff"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp"
                        android:text="100%"
                        tools:src="@drawable/activity_record_ic_focus_macro"/>

                    <TextView
                        android:id="@+id/seekBar_upper_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00ffffff"
                        android:gravity="center"
                        android:padding="4dp"
                        android:paddingTop="30dp"
                        android:text="100%"
                        android:textColor="@color/colorWhite"
                        android:textSize="8sp"
                        tools:visibility="visible"
                        android:layout_below="@+id/seekBar_upper_image"
                        android:layout_alignParentStart="true"/>

                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/seekBar_lower_image"
                        android:layout_below="@+id/seekBar_upper_image"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="24dp">

                        <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                            android:id="@+id/seekBar_slide_left"
                            android:layout_width="match_parent"
                            android:layout_height="133dp"
                            android:gravity="center"
                            android:progressTint="@color/colorWhite"
                            android:splitTrack="false"
                            android:thumbTint="@color/colorWhite"
                            app:seekBarRotation="CW270"/> <!-- Rotation: CW90 or CW270 -->
                    </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

                    <TextView
                        android:id="@+id/seekBar_lower_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#00ffffff"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="0%"
                        android:textColor="@color/colorWhite"
                        android:textSize="8sp"
                        tools:visibility="visible"
                        />

                    <ImageView
                        android:id="@+id/seekBar_lower_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:background="#00ffffff"
                        android:paddingBottom="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:src="@drawable/activity_record_ic_focus_infinite"
                        android:text="100%"
                        tools:visibility="visible"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>


        <ImageButton
            android:id="@+id/button_to_hide_controls"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/button_to_show_controls_right"
            android:layout_toStartOf="@+id/button_record_slider_relativeLayout"
            android:background="@drawable/circle_background"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/activity_record_ic_show_menu_normal"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/button_to_show_controls_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/settings_bar_cardview"
            android:layout_alignStart="@+id/button_to_hide_controls"
            android:layout_toLeftOf="@+id/button_record_slider_relativeLayout"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/activity_record_ic_controls"
            android:visibility="visible"
            />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>


