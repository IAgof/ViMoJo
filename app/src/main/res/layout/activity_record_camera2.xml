<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:id="@+id/coordinatorLayout"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="false"
                                                 android:background="@color/colorBlack"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 xmlns:CustomManualFocusView="http://schemas.android.com/apk/res-auto">

    <com.videonasocialmedia.camera.customview.AutoFitTextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
    />

    <com.videonasocialmedia.camera.customview.CustomManualFocusView
        android:id="@+id/customManualFocusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        CustomManualFocusView:focus_icon="@drawable/activity_record_ic_focused"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/rotateDeviceHint"
            android:scaleType="fitXY"
            android:src="@drawable/activity_record_grid_security_margin_one_one"
            android:visibility="invisible"/>

        <android.support.v7.widget.CardView
            android:id="@+id/edit_or_gallery_cardview"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/edit_or_gallery_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >

                    <com.videonasocialmedia.vimojo.presentation.views.customviews.CircleImageView
                        android:id="@+id/button_navigate_edit"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_record_ic_galery"
                        android:visibility="invisible"
                        />

                    <ImageButton
                        android:id="@+id/button_navigate_gallery"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:src="@drawable/activity_record_ic_gallery"
                        />

                    <TextView
                        android:id="@+id/text_view_num_videos"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        tools:text="00"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/edit_or_gallery_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_or_gallery_relative"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:text="@string/recordTextGallery"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    tools:text="Gallery"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/hud_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null">

            <RelativeLayout
                android:id="@+id/hud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="@null">

                <ImageButton
                    android:id="@+id/button_navigate_settings"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_settings"
                    />

                <!--delete button settings camera in java code-->
                <ImageButton
                    android:id="@+id/button_settings_camera"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/button_navigate_settings"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_controls"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/button_navigate_tutorial"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/button_navigate_settings"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/common_icon_help_white"/>

                <ImageView
                    android:id="@+id/activity_record_icon_battery"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_toRightOf="@+id/activity_record_icon_storage"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_battery_full"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/activity_record_icon_storage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/button_navigate_tutorial"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_storage_normal"
                    android:visibility="visible"/>


                <LinearLayout
                    android:id="@+id/control_chronometer_and_rec_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/imageRecPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:src="@drawable/activity_record_drawable_rec_progress"
                        android:visibility="invisible"
                        />

                    <Chronometer
                        android:id="@+id/chronometer_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="4dp"
                        android:text="00:00"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:visibility="visible"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/text_view_info_resolution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/camera_settings_selected"
                            android:textColor="@android:color/white"
                            tools:text="720p"/>
                        <TextView
                            android:id="@+id/text_view_info_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/camera_settings_selected"
                            android:textColor="@android:color/white"
                            tools:text="16Mbps"/>
                        <TextView
                            android:id="@+id/text_view_info_frame_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/camera_settings_selected"
                            android:textColor="@android:color/white"
                            tools:text="30 fps"/>

                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/mic_plug_imageview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/picometer_progressbar"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_phone_micro_activated"
                    android:visibility="visible"/>

                <ProgressBar
                    android:id="@+id/picometer_progressbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:maxHeight="2dp"
                    />

                <ImageButton
                    android:id="@+id/clear_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_expand"
                    android:visibility="gone"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/camera_shutter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/activity_record_ic_metering_shutter"
            android:visibility="gone"/>

        <include layout="@layout/activity_record_exposure_submenu"/>

        <android.support.v7.widget.CardView
            android:id="@+id/af_selection_submenu_cardview"
