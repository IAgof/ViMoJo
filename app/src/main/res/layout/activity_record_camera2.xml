            android:layout_height="wrap_content"
            android:layout_above="@+id/settings_bar_cardview"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorGreyTransparent"
            android:visibility="invisible"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null">

            <LinearLayout
                android:id="@+id/af_selection_submenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/settings_bar_cardview"
                android:layout_centerHorizontal="true">

                <ImageButton
                    android:id="@+id/af_setting_selective"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_focus_touch"
                    android:visibility="gone"
                    />

                <ImageButton
                    android:id="@+id/af_setting_auto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_focus_auto"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/af_setting_manual"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_focus_adjust"
                    android:visibility="gone"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/white_balance_submenu_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/settings_bar_cardview"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorGreyTransparent"
            android:visibility="invisible"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null">

            <LinearLayout
                android:id="@+id/white_balance_submenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/settings_bar_cardview"
                android:layout_centerHorizontal="true">

                <ImageButton
                    android:id="@+id/wb_setting_auto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_white_balance_auto"

                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/wb_setting_cloudy"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_white_balance_cloudy"

                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/wb_setting_daylight"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_white_balance_daylight"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/wb_setting_flash"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_flash"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/wb_setting_fluorescent"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_white_balance_fluorescent"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/wb_setting_incandescent"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_white_balance_tungsten"
                    android:visibility="gone"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/metering_mode_submenu_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/settings_bar_cardview"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorGreyTransparent"
            android:visibility="invisible"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null">

            <LinearLayout
                android:id="@+id/metering_mode_submenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/settings_bar_cardview"
                android:layout_centerHorizontal="true">

                <ImageButton
                    android:id="@+id/metering_mode_auto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_brightness_auto"/>

                <ImageButton
                    android:id="@+id/metering_mode_center"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_metering_center"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/metering_mode_spot"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
