<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:id="@+id/coordinatorLayout"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="false"
                                                 android:background="@color/colorBlack"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 xmlns:CustomManualFocusView="http://schemas.android.com/apk/res-auto">

    <com.videonasocialmedia.camera.customview.AutoFitTextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
    />

    <com.videonasocialmedia.avrecorder.view.CustomManualFocusView
        android:id="@+id/customManualFocusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        CustomManualFocusView:focus_icon="@drawable/activity_record_ic_focused"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/activity_record_background_grid"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/rotateDeviceHint" />

        <android.support.v7.widget.CardView
            android:id="@+id/edit_or_gallery_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/hud_cardview"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardElevation="@null">

            <TextView
                android:id="@+id/edit_or_gallery_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/hud_cardview"
                android:text="@string/recordTextGallery"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/hud_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null">

            <RelativeLayout
                    android:id="@+id/hud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@null">

                    <ImageButton
                        android:id="@+id/button_navigate_settings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/activity_record_ic_settings"
                        />

                <!--delete button settings camera in java code-->
                    <ImageButton
                        android:id="@+id/button_settings_camera"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:layout_toRightOf="@+id/button_navigate_settings"
                        android:layout_centerVertical="true"
                        android:src="@drawable/activity_record_ic_controls"
                        android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/activity_record_icon_battery"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_toRightOf="@+id/activity_record_icon_storage"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_battery_full"
                    android:visibility="visible" />

                    <ImageView
                        android:id="@+id/activity_record_icon_storage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:src="@drawable/activity_record_ic_storage"
                        android:layout_toRightOf="@+id/button_navigate_settings"
                        android:layout_centerVertical="true"/>

                    <LinearLayout
                        android:id="@+id/control_chronometer_and_rec_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/imageRecPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="4dp"
                            android:src="@drawable/activity_record_drawable_rec_progress"
                            android:visibility="visible"
                            />

                        <Chronometer
                            android:id="@+id/chronometer_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:paddingRight="4dp"
                            android:text="00:00"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/button_resolution_indicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:src="@drawable/activity_record_ic_resolution_720"
                        android:layout_toRightOf="@+id/control_chronometer_and_rec_point"
                        android:layout_centerVertical="true"
                        />

                    <ImageButton
                        android:id="@+id/mic_plug_imageview"
                        android:layout_width="18dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:src="@drawable/activity_record_ic_phone_micro_activated"
                        android:visibility="visible"
                        android:layout_toLeftOf="@+id/picometer_progressbar"
                        android:layout_centerVertical="true"/>

                    <ProgressBar
                        android:id="@+id/picometer_progressbar"
                        android:layout_width="108dp"
                        android:max="100"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxHeight="2dp"
                        android:layout_marginRight="16dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:indeterminate="false"
                        android:layout_toLeftOf="@+id/button_navigate_edit_or_gallery"
                        android:layout_centerVertical="true"
                        />


                    <com.videonasocialmedia.vimojo.presentation.views.customviews.CircleImageView
                        android:id="@+id/button_navigate_edit_or_gallery"
                        android:layout_width="36dp"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_background"
                        android:scaleType="fitCenter"
                        android:src="@drawable/activity_record_ic_galery"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="14dp"
                         />

                    <TextView
                        android:id="@+id/text_view_num_videos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="28dp"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        tools:text="0"
                         />

                    <LinearLayout
                        android:id="@+id/picometer"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGreyTransparent"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentStart="false"
                        android:layout_marginLeft="24dp">

                        <SeekBar
                            android:layout_width="200dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_brightness_5_white_48px"
                            android:indeterminate="false"
                            android:visibility="gone" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/activity_record_icon_geolocation"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/activity_record_ic_geolocation_normal"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp" />

                    <ImageView
                        android:id="@+id/activity_record_icon_microphone_"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:src="@drawable/activity_record_ic_microphone_pressed"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp" />

                <ImageButton
                    android:id="@+id/clear_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_record_ic_shrink"
                    android:layout_toEndOf="@+id/activity_record_icon_battery"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/camera_shutter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/activity_record_ic_metering_shutter"
            android:visibility="gone"/>

        <android.support.v7.widget.CardView
            android:id="@+id/iso_submenu_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/settings_bar_cardview"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/iso_submenu"
                android:layout_above="@+id/settings_bar_cardview"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/iso_auto"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="#00ffffff"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:text="Auto"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                />
         </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/af_selection_submenu_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/settings_bar_cardview"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null"
            android:visibility="invisible">
            <LinearLayout
                android:id="@+id/af_selection_submenu"
                android:layout_above="@+id/settings_bar_cardview"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/af_setting_selective"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_focus_touch"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    />

                <ImageButton
                    android:id="@+id/af_setting_auto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_focus_auto"
                    android:layout_margin="8dp"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/af_setting_manual"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_focus_adjust"
                    android:layout_margin="8dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/white_balance_submenu_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/settings_bar_cardview"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null"
            android:visibility="invisible">
            <LinearLayout
                android:id="@+id/white_balance_submenu"
                android:layout_above="@+id/settings_bar_cardview"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/wb_setting_auto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_white_balance_auto"
                    android:visibility="gone"

                    android:layout_margin="8dp" />

                <ImageButton
                    android:id="@+id/wb_setting_cloudy"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_white_balance_cloudy"
                    android:visibility="gone"

                    android:layout_margin="8dp" />

                <ImageButton
                    android:id="@+id/wb_setting_daylight"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_white_balance_daylight"
                    android:visibility="gone"
                    android:layout_margin="8dp" />

                <ImageButton
                    android:id="@+id/wb_setting_flash"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_flash"
                    android:visibility="gone"
                    android:layout_margin="8dp" />

                <ImageButton
                    android:id="@+id/wb_setting_fluorescent"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_white_balance_fluorescent"
                    android:visibility="gone"
                    android:layout_margin="8dp" />

                <ImageButton
                    android:id="@+id/wb_setting_incandescent"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_white_balance_tungsten"
                    android:visibility="gone"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/metering_mode_submenu_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/settings_bar_cardview"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null"
            android:visibility="invisible">
            <LinearLayout
                android:id="@+id/metering_mode_submenu"
                android:layout_above="@+id/settings_bar_cardview"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/metering_mode_auto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_brightness_auto"
                    android:layout_margin="8dp" />

                <ImageButton
                    android:id="@+id/metering_mode_exposure_compensation"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_metering_manual"
                    android:visibility="invisible"
                    android:layout_margin="8dp" />

                <ImageButton
                    android:id="@+id/metering_mode_center"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_metering_center"
                    android:visibility="invisible"
                    android:layout_margin="8dp" />

                <ImageButton
                    android:id="@+id/metering_mode_spot"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_brightness_manual"
                    android:visibility="invisible"
                    android:layout_margin="8dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_bar_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/button_to_show_controls_right"
            android:backgroundTint="@color/colorGreyTransparent"
            app:cardCornerRadius="8dp"
            app:cardElevation="@null">

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/settings_bar"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:visibility="visible"
                android:layout_toLeftOf="@+id/button_to_show_controls_right"
                >

                <ImageButton
                    android:id="@+id/button_camera_default"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_settings_default"
                    android:layout_margin="8dp"
                    />

                <ImageButton
                    android:id="@+id/button_grid"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/activity_record_ic_grid"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    />

                <ImageButton
                    android:id="@+id/button_iso"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_iso"
                    android:layout_margin="8dp"
                    />

                <ImageButton
                    android:id="@+id/button_white_balance"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="#00ffffff"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_record_ic_white_balance"
