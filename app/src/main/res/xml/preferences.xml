<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/title_camera_section">

        <ListPreference
            android:key="list_preference_resolution"
            android:title="@string/resolution"
            android:dialogTitle="@string/resolution"
            android:defaultValue="@string/low_resolution_value"/>

        <ListPreference
            android:key="list_preference_quality"
            android:title="@string/quality"
            android:dialogTitle="@string/quality"
            android:defaultValue="@string/good_quality_value" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Advanced">
       <com.videonasocialmedia.videona.presentation.views.customviews.DialogPreferences
            android:key="dialog_preferences_key"
            android:dialogIcon="@android:drawable/ic_dialog_alert"
            android:title="Join Videona Beta"
            android:dialogMessage="Videona es ... Â¿Te atreves a ser un Videona testers y probar nuevas funcionalidades?"
            android:positiveButtonText="Why not, let's try"
            android:negativeButtonText="Not now, thanks"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_vote_section">
        <Preference
            android:title="@string/content_vote_section">
            <intent android:action="android.intent.action.VIEW"
                android:data="market://details?id=com.videonasocialmedia.videona" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_contact_section">
        <Preference
            android:title="@string/content_contact_section">
            <intent android:action="android.intent.action.VIEW"
                android:data="mailto:info@videona.com" />
            />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_about_section">
        <Preference
            android:title="@string/aboutUsTitle">
            <intent android:action=".presentation.views.activity.AboutActivity"/>
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>