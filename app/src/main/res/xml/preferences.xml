<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/title_advanced_section">
        <Preference
            android:key="downloadKamarada"
            android:title="@string/downloadKamarada">
        </Preference>
        <Preference
            android:key="shareVideona"
            android:title="@string/shareVideona">
        </Preference>
        <Preference
            android:key="followUs"
            android:title="@string/followUsInTwitter">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/videonaTwitter"/>
        </Preference>
        <Preference
            android:key="beta"
            android:title="@string/betaPreferenceText">
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/titleUserSection">
        <Preference
            android:key="name"
            android:title="@string/name">
            <intent android:action=".presentation.views.activity.NamePreferenceActivity"/>
        </Preference>
        <Preference
            android:key="username"
            android:title="@string/username">
            <intent android:action=".presentation.views.activity.UsernamePreferenceActivity"/>
        </Preference>
        <Preference
            android:key="email"
            android:title="@string/emailPreference">
            <intent android:action=".presentation.views.activity.EmailPreferenceActivity"/>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_FTP1_Section">
        <Preference
            android:key="host"
            android:title="@string/host_FTP">
            <intent
                android:action=".presentation.views.activity.HostPreferenceActivity">
                <extra android:name="keyHost" android:value="host"/>
            </intent>
        </Preference>
        <Preference
            android:key="usernameFTP"
            android:title="@string/username_FTP">
            <intent android:action=".presentation.views.activity.UserNameFTPPreferenceActivity">
                <extra android:name="keyUsernameFTP" android:value="usernameFTP"/>
            </intent>
        </Preference>
        <Preference
            android:key="passwordFTP"
            android:title="@string/password_FTP">
            <intent android:action=".presentation.views.activity.PasswordFTPPreferenceActivity">
                <extra android:name="keyPasswordFTP" android:value="passwordFTP"/>
            </intent>
        </Preference>
        <Preference
            android:key="EditedVideoDestinationFTP"
            android:title="@string/edited_video_destination">
            <intent android:action=".presentation.views.activity.EditedVideoDestinationPreferenceActivity">
                <extra android:name="keyEditedVideoDestinationFTP" android:value="EditedVideoDestinationFTP"/>
            </intent>
        </Preference>
        <Preference
            android:key="UneditedVideoDestinationFTP"
            android:title="@string/unedited_video_destination">
            <intent android:action=".presentation.views.activity.UneditedVideoDestinationPreferenceActivity">
                <extra android:name="keyUneditedVideoDestinationFTP" android:value="UneditedVideoDestinationFTP"/>
            </intent>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_FTP2_Section">
        <Preference
            android:key="host_FTP2"
            android:title="@string/host_FTP">
            <intent android:action=".presentation.views.activity.HostPreferenceActivity">
                 <extra android:name="keyHost" android:value="host_FTP2"/>
            </intent>
        </Preference>
        <Preference
            android:key="username_FTP2"
            android:title="@string/username_FTP">
            <intent android:action=".presentation.views.activity.UserNameFTPPreferenceActivity">
                <extra android:name="keyUsernameFTP" android:value="username_FTP2"/>
            </intent>

        </Preference>
        <Preference
            android:key="password_FTP2"
            android:title="@string/password_FTP">
            <intent android:action=".presentation.views.activity.PasswordFTPPreferenceActivity">
                <extra android:name="keyPasswordFTP" android:value="password_FTP2"/>
            </intent>
        </Preference>
        <Preference
            android:key="Edited_Video_Destination_FTP2"
            android:title="@string/edited_video_destination">
            <intent android:action=".presentation.views.activity.EditedVideoDestinationPreferenceActivity">
                <extra android:name="keyEditedVideoDestinationFTP" android:value="Edited_Video_Destination_FTP2"/>
            </intent>
        </Preference>
        <Preference
            android:key="Unedited_Video_Destination_FTP2"
            android:title="@string/unedited_video_destination">
            <intent android:action=".presentation.views.activity.UneditedVideoDestinationPreferenceActivity">
                <extra android:name="keyUneditedVideoDestinationFTP" android:value="Unedited_Video_Destination_FTP2"/>
            </intent>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_camera_section">

        <com.videonasocialmedia.vimojo.presentation.views.customviews.ChooseCameraResolutionListPreferences
            android:dialogTitle="@string/resolution"
            android:entries="@array/camera_resolution_names"
            android:entryValues="@array/camera_resolution_values"
            android:key="list_preferences_resolution"
            android:summary="@string/low_value"
            android:title="@string/resolution"/>

        <com.videonasocialmedia.vimojo.presentation.views.customviews.ChooseCameraQualityListPreferences
            android:dialogTitle="@string/quality"
            android:entries="@array/camera_quality_names"
            android:entryValues="@array/camera_quality_values"
            android:key="list_preferences_quality"
            android:summary="@string/good_quality_name"
            android:title="@string/quality"/>

    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/moreInformation">
        <Preference
            android:title="@string/aboutUsTitle">
            <intent android:action=".presentation.views.activity.AboutActivity"/>
        </Preference>
        <Preference
            android:title="@string/privacyPolicy">
            <intent android:action=".presentation.views.activity.PrivacyPolicyActivity"/>
        </Preference>
        <Preference
            android:title="@string/termsOfService">
            <intent android:action=".presentation.views.activity.TermsOfServiceActivity"/>
        </Preference>
        <Preference
            android:title="@string/licenses">
            <intent android:action=".presentation.views.activity.LicensesActivity"/>
        </Preference>
        <Preference
            android:title="@string/legacyAdviceTitle">
            <intent android:action=".presentation.views.activity.LegalNoticeActivity"/>
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/accountActions">
        <Preference
            android:key="exit"
            android:title="@string/exit">
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>