<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

     <PreferenceCategory
        android:title="@string/titleUserSection">
        <EditTextPreference
            android:key="name"
            android:title="@string/name"
            android:dialogTitle="@string/enterName">
        </EditTextPreference>

        <EditTextPreference
            android:key="username"
            android:title="@string/username"
            android:dialogTitle="@string/enterUsername">
        </EditTextPreference>

        <EditTextPreference
            android:key="email"
            android:title="@string/emailPreference"
            android:inputType="textEmailAddress"
            android:dialogTitle="@string/enterEmail">
        </EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_camera_section"
        android:key="@string/title_camera_section"
        android:enabled="true">

        <com.videonasocialmedia.vimojo.presentation.views.customviews.ChooseCameraResolutionListPreferences
            android:theme="@style/VideonaDialog"
            android:dialogTitle="@string/resolution"
            android:entries="@array/camera_resolution_names"
            android:entryValues="@array/camera_resolution_values"
            android:key="list_preferences_resolution"
            android:summary="@string/low_resolution_name"
            android:title="@string/resolution"
            />

        <com.videonasocialmedia.vimojo.presentation.views.customviews.ChooseCameraQualityListPreferences
            android:theme="@style/VideonaDialog"
            android:dialogTitle="@string/quality"
            android:entries="@array/camera_quality_names"
            android:entryValues="@array/camera_quality_values"
            android:key="list_preferences_quality"
            android:summary="@string/good_quality_name"
            android:title="@string/quality"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_fade_transition"
        android:key="@string/title_fade_transition">
        <SwitchPreference
            android:key="video_fade_transition"
            android:title="@string/title_video_fade_transition"
            android:defaultValue="false" />

        <SwitchPreference
            android:key="audio_fade_transition"
            android:title="@string/title_audio_fade_transition"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_watermark_section"
        android:key="@string/title_watermark_section">
        <SwitchPreference
            android:key="add_watermark"
            android:title="@string/title_watermark_preference"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_theme_app_section"
        android:key="@string/title_theme_app_section">
        <SwitchPreference
            android:key="themeAppDark"
            android:title="@string/title_theme_app_preference"
            android:defaultValue="true"
            android:checked="true"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_FTP1_Section"
        android:key="@string/title_FTP1_Section">

        <EditTextPreference
            android:key="host"
            android:title="@string/host_FTP"
            android:dialogTitle="@string/enterHost">
        </EditTextPreference>

        <EditTextPreference
            android:key="usernameFTP"
            android:title="@string/username_FTP"
            android:dialogTitle="@string/enterUsername_FTP">
        </EditTextPreference>

        <EditTextPreference
            android:key="passwordFTP"
            android:title="@string/password_FTP"
            android:selectAllOnFocus="true"
            android:inputType="textWebPassword"
            android:singleLine="true"
            android:dialogTitle="@string/enterPassword_FTP">
        </EditTextPreference>

        <EditTextPreference
            android:key="EditedVideoDestinationFTP"
            android:title="@string/edited_video_destination"
            android:dialogTitle="@string/enterEditedVideoDestination_FTP"
            >
        </EditTextPreference>

        <EditTextPreference
            android:key="UneditedVideoDestinationFTP"
            android:title="@string/unedited_video_destination"
            android:dialogTitle="@string/enterUneditedVideoDestination_FTP">
        </EditTextPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_FTP2_Section"
        android:key="@string/title_FTP2_Section">

        <EditTextPreference
            android:key="host_FTP2"
            android:title="@string/host_FTP"
            android:dialogTitle="@string/enterHost">
        </EditTextPreference>

        <EditTextPreference
            android:key="username_FTP2"
            android:title="@string/username_FTP"
            android:dialogTitle="@string/enterUsername_FTP">
        </EditTextPreference>

        <EditTextPreference
            android:key="password_FTP2"
            android:title="@string/password_FTP"
            android:inputType="textWebPassword"
            android:selectAllOnFocus="true"
            android:dialogTitle="@string/enterPassword_FTP">
        </EditTextPreference>

        <EditTextPreference
            android:key="Edited_Video_Destination_FTP2"
            android:title="@string/edited_video_destination"
            android:dialogTitle="@string/enterEditedVideoDestination_FTP">
        </EditTextPreference>

        <EditTextPreference
            android:key="Unedited_Video_Destination_FTP2"
            android:title="@string/unedited_video_destination"
            android:dialogTitle="@string/enterUneditedVideoDestination_FTP">
        </EditTextPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="moreInformation"
        android:title="@string/moreInformation">
        <Preference
            android:key="aboutUs"
            android:title="@string/aboutUsTitle">
        </Preference>
        <Preference
            android:key="privacyPolicy"
            android:title="@string/privacyPolicy">
        </Preference>
        <Preference
            android:key="termOfService"
            android:title="@string/termsOfService">
        </Preference>
        <Preference
            android:key="licenses"
            android:title="@string/licenses">
        </Preference>
        <Preference
            android:key="legalNotice"
            android:title="@string/legacyAdviceTitle">
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>