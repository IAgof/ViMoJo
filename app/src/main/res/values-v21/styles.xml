<resources>


    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Activity about, delete with new design -->
    <style name="Title">
        <item name="android:textSize">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <!-- AppTheme Videona -->
    <style name="VideonaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@color/colorAccent</item>

        <item name="android:scrollbarThumbHorizontal">@color/colorTransparent</item>


        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

         <item name="android:alertDialogTheme">@style/VideonaAlertDialog</item>
         <item name="android:toolbarStyle">@style/VideonaToolbar</item>

         <!-- Icons -->
        <item name="ic_settings_videona">@drawable/ic_settings_light</item>

       <item name="android:preferenceCategoryStyle">@style/VideonaCategoryPreference</item>



 </style>


    <style name="VideonaToolbar" parent="Theme.AppCompat">
        <item name="android:maxHeight">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorToolbar</item>
        <item name ="android:textAllCaps">false</item>
        <item name="windowActionBar">false</item>

    </style>


    <style name="VideonaAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorAlertDialogListItem">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name ="textAllCaps">false</item>
    </style>

    <style name="VideonaAlertDialogDark" parent="Theme.AppCompat.Dialog.Alert">

        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="VideonaCategoryPreference" parent="Theme.AppCompat.Light">
        <item name ="android:textAllCaps">true</item>
        <item name="android:layout">@layout/settings_category_preference</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
     </style>


 </resources>