<resources>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- AppTheme Light Videona -->
    <style name="VideonaThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="themeName">light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <!-- Hide scrollbar in scrollViews -->
        <item name="android:scrollbarThumbHorizontal">@color/colorTransparent</item>
        <item name="android:scrollbarThumbVertical">@color/colorTransparent</item>

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@color/colorTransparent</item>
        <!--navigationView and Status Bar transparent with Drawer opened-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="drawerArrowStyle">@style/arrowWhiteToolbar</item>

        <item name="colorBackgroundFloating">@color/colorWhite</item>

        <!--style of colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/colorSecondaryLight</item>


        <item name="android:alertDialogTheme">@style/VideonaDialog</item>
        <item name="android:preferenceCategoryStyle">@style/VideonaCategoryPreference</item>

        <item name="android:editTextStyle">@style/VideonaEditText</item>
        <item name="android:radioButtonStyle">@style/VideonaRadioButton</item>
        <item name="android:checkboxStyle">@style/VideonaCheckBox</item>
        <item name="cardViewStyle">@style/CardViewStyleLight</item>

        <item name="titleTextColor">@color/colorSecondary</item>
    </style>

    <style name="CardViewStyleLight" parent="CardView.Light"></style>


    <!-- AppTheme Dark Videona -->
    <style name="VideonaThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="themeName">dark</item>


        <!--transition-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <!--scroll transparent-->
        <item name="android:scrollbarThumbHorizontal">@color/colorTransparent</item>
        <item name="android:scrollbarThumbVertical">@color/colorTransparent</item>

        <!--navigationView and Status Bar transparent with Drawer-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>



        <item name="android:windowBackground">@color/colorPrimaryThemeDark</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@color/colorTransparent</item>
        <!--Toolbar-->
        <item name="colorPrimary">@color/colorPrimaryThemeDark</item>

        <!--Status Bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryThemeDark</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>

        <item name="colorBackgroundFloating">@color/colorPrimaryLightThemeDark</item>

        <item name="android:alertDialogTheme">@style/VideonaDialog</item>
        <item name="drawerArrowStyle">@style/arrowWhiteToolbar</item>

        <item name="cardViewStyle">@style/CardViewStyleDark</item>

        <item name="android:editTextStyle">@style/VideonaEditText</item>
        <item name="android:buttonTint">@color/colorWhite</item>
        <item name="android:radioButtonStyle">@style/VideonaRadioButton</item>

        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="CardViewStyleDark" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorPrimaryLightThemeDark</item>
    </style>

    <!-- AppTheme Common Videona -->

    <style name="VideonaDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">?attr/colorBackgroundFloating</item>
    </style>

    <style name="VideonaCategoryPreference" parent="Theme.AppCompat.Light">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout">@layout/settings_category_preference</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="VideonaEditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">?attr/android:textColorSecondary</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="VideonaTextView" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="VideonaRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:backgroundTint">?attr/android:textColorSecondary</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:buttonTint">?attr/colorAccent</item>
    </style>

    <style name="VideonaCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:backgroundTint">?attr/android:textColorSecondary</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:buttonTint">?attr/colorAccent</item>
    </style>


    <style name="ViMoJoTutorial" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="arrowWhiteToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="VideonaTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <!-- Register, Login Theme -->
    <style name="VideonaThemeUserAuth" parent="Theme.AppCompat.Light.NoActionBar">
        <!--scroll transparent-->
        <item name="android:scrollbarThumbHorizontal">@color/colorTransparent</item>
        <item name="android:scrollbarThumbVertical">@color/colorTransparent</item>

        <!--navigationView and Status Bar transparent with Drawer-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@color/colorTransparent</item>

        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>


    </style>

</resources>